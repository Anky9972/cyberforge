# ============================================
# CyberForge - Complete Configuration Template
# ============================================

# ===== APPLICATION =====
NODE_ENV=development
APP_NAME=CyberForge
APP_VERSION=2.0.0

# ===== SERVER CONFIGURATION =====
PORT=3001
HOST=localhost
FRONTEND_URL=http://localhost:5173

# ===== DATABASE =====
# PostgreSQL Connection
DATABASE_URL=postgresql://cyberforge:cyberforge_password@localhost:5432/cyberforge
DATABASE_POOL_MIN=2
DATABASE_POOL_MAX=10
DATABASE_SSL=false

# Redis Connection
REDIS_URL=redis://localhost:6379
REDIS_PASSWORD=
REDIS_DB=0

# ===== SECURITY =====
# Generate these with: node -e "console.log(require('crypto').randomBytes(64).toString('hex'))"
JWT_SECRET=your_super_secret_jwt_key_min_32_chars
JWT_REFRESH_SECRET=your_super_secret_refresh_token_key
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
BCRYPT_ROUNDS=10
ENABLE_USER_REGISTRATION=true
ENABLE_EMAIL_VERIFICATION=false

# ===== EMAIL CONFIGURATION =====
# SMTP Settings (Gmail example - use App Password if 2FA enabled)
SMTP_HOST=smtp.gmail.com
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USERNAME=your-email@gmail.com
SMTP_PASSWORD=your-app-specific-password

# Email Branding
FROM_EMAIL=noreply@cyberforge.dev
FROM_NAME=CyberForge Security
FRONTEND_URL=http://localhost:5173

# For other providers:
# SendGrid: smtp.sendgrid.net (port 587, user: apikey)
# Mailgun: smtp.mailgun.org (port 587)
# Outlook: smtp-mail.outlook.com (port 587)
# AWS SES: email-smtp.{region}.amazonaws.com (port 587)
JWT_EXPIRY=24h
JWT_REFRESH_EXPIRY=7d
SESSION_SECRET=your_super_secret_session_key
ENCRYPTION_KEY=your_32_char_encryption_key_here

# Password Policy
PASSWORD_MIN_LENGTH=8
PASSWORD_REQUIRE_SPECIAL=true
PASSWORD_REQUIRE_NUMBERS=true
BCRYPT_ROUNDS=10

# Security Headers
HELMET_ENABLED=true
RATE_LIMIT_ENABLED=true
CORS_ENABLED=true

# ===== AI PROVIDERS =====
# Primary AI Provider (ollama, mistral, openai, anthropic, google, local)
AI_PROVIDER=ollama
AI_FALLBACK_ENABLED=true
AI_FALLBACK_PROVIDER=mistral

# Ollama Local AI (Primary - Free, Private, Fast)
OLLAMA_API_URL=http://localhost:11434
OLLAMA_MODEL=llama3.1:8b
OLLAMA_TIMEOUT_MS=120000
AI_FALLBACK_PROVIDER=openai

# Mistral AI
MISTRAL_API_KEY=your_mistral_api_key_here
MISTRAL_MODEL=mistral-medium-2508
MISTRAL_API_URL=https://api.mistral.ai/v1/chat/completions

# OpenAI
OPENAI_API_KEY=your_openai_api_key_here
OPENAI_MODEL=gpt-4-turbo-preview
OPENAI_ORG_ID=

# Anthropic Claude
ANTHROPIC_API_KEY=your_anthropic_api_key_here
ANTHROPIC_MODEL=claude-3-sonnet-20240229
ANTHROPIC_API_URL=https://api.anthropic.com/v1/messages

# Google Gemini
GOOGLE_API_KEY=your_google_api_key_here
GOOGLE_MODEL=gemini-pro

# Local AI (Ollama)
LOCAL_MODEL_URL=http://localhost:11434
LOCAL_MODEL_NAME=llama2

# AI Configuration
AI_TEMPERATURE=0.7
AI_MAX_TOKENS=4000
AI_TIMEOUT_MS=60000

# ===== RATE LIMITING =====
RATE_LIMIT_WINDOW_MS=900000
RATE_LIMIT_MAX_REQUESTS=100
RATE_LIMIT_ANALYSIS_WINDOW_MS=3600000
RATE_LIMIT_ANALYSIS_MAX_REQUESTS=10

# ===== FILE UPLOAD =====
MAX_FILE_SIZE_MB=50
MAX_ZIP_SIZE_MB=100
ALLOWED_FILE_EXTENSIONS=.py,.js,.ts,.java,.cpp,.c,.go,.rb,.php,.cs
UPLOAD_DIR=./uploads
TEMP_DIR=./temp

# ===== ANALYSIS CONFIGURATION =====
MAX_CONCURRENT_SCANS=5
ANALYSIS_TIMEOUT_SECONDS=300
WORKER_THREADS=4
ENABLE_SYMBOLIC_EXECUTION=true
ENABLE_COVERAGE_GUIDED_FUZZING=true
ENABLE_CVE_INTEGRATION=true

# ===== GITHUB INTEGRATION =====
GITHUB_ENABLED=false
GITHUB_CLIENT_ID=your_github_oauth_client_id
GITHUB_CLIENT_SECRET=your_github_oauth_client_secret
GITHUB_CALLBACK_URL=http://localhost:3002/auth/github/callback
GITHUB_WEBHOOK_SECRET=your_github_webhook_secret
GITHUB_APP_ID=
GITHUB_PRIVATE_KEY_PATH=

# ===== GITLAB INTEGRATION =====
GITLAB_ENABLED=false
GITLAB_CLIENT_ID=your_gitlab_oauth_client_id
GITLAB_CLIENT_SECRET=your_gitlab_oauth_client_secret
GITLAB_CALLBACK_URL=http://localhost:3002/auth/gitlab/callback
GITLAB_URL=https://gitlab.com

# ===== EMAIL NOTIFICATIONS =====
EMAIL_ENABLED=false
# (Email SMTP settings are configured above in the EMAIL CONFIGURATION section)

# ===== SLACK INTEGRATION =====
SLACK_ENABLED=false
SLACK_WEBHOOK_URL=https://hooks.slack.com/services/YOUR/WEBHOOK/URL
SLACK_CHANNEL=#security-alerts
SLACK_BOT_TOKEN=

# ===== JIRA INTEGRATION =====
JIRA_ENABLED=false
JIRA_URL=https://your-domain.atlassian.net
JIRA_EMAIL=your_email@domain.com
JIRA_API_TOKEN=your_jira_api_token
JIRA_PROJECT_KEY=SEC

# ===== CI/CD INTEGRATIONS =====
JENKINS_ENABLED=false
JENKINS_URL=http://jenkins.company.com
JENKINS_TOKEN=your_jenkins_token
JENKINS_USER=your_jenkins_user

CIRCLECI_ENABLED=false
CIRCLECI_TOKEN=your_circleci_token

# ===== CLOUD STORAGE =====
CLOUD_STORAGE_ENABLED=false
CLOUD_STORAGE_PROVIDER=aws

# AWS S3
AWS_ACCESS_KEY_ID=your_aws_access_key
AWS_SECRET_ACCESS_KEY=your_aws_secret_key
AWS_REGION=us-east-1
AWS_S3_BUCKET=cyberforge-reports
AWS_S3_ENDPOINT=

# Azure Blob Storage
AZURE_STORAGE_ACCOUNT=your_storage_account
AZURE_STORAGE_KEY=your_storage_key
AZURE_STORAGE_CONTAINER=reports

# Google Cloud Storage
GCS_PROJECT_ID=your_gcs_project_id
GCS_BUCKET=cyberforge-reports
GCS_KEY_FILE=./gcs-key.json

# ===== MONITORING & LOGGING =====
LOG_LEVEL=info
LOG_FORMAT=json
LOG_DIR=./logs
LOG_MAX_SIZE=10m
LOG_MAX_FILES=7

# Sentry Error Tracking
SENTRY_ENABLED=false
SENTRY_DSN=your_sentry_dsn
SENTRY_ENVIRONMENT=development
SENTRY_TRACES_SAMPLE_RATE=0.1

# Application Performance Monitoring
APM_ENABLED=false
NEW_RELIC_LICENSE_KEY=
DATADOG_API_KEY=

# ===== ANALYTICS =====
ANALYTICS_ENABLED=false
MIXPANEL_TOKEN=your_mixpanel_token
GOOGLE_ANALYTICS_ID=UA-XXXXXXXXX-X
POSTHOG_API_KEY=

# ===== FEATURE FLAGS =====
ENABLE_USER_REGISTRATION=true
ENABLE_SOCIAL_LOGIN=true
ENABLE_TWO_FACTOR_AUTH=false
ENABLE_API_KEYS=true
ENABLE_WEBHOOKS=true
ENABLE_AUDIT_LOG=true
ENABLE_EXPORT_REPORTS=true

# ===== COMPLIANCE =====
COMPLIANCE_MODE=
AUDIT_LOG_RETENTION_DAYS=365
GDPR_MODE=false
HIPAA_MODE=false

# ===== MULTI-TENANCY =====
ENABLE_MULTI_TENANCY=false
DEFAULT_TENANT=default

# ===== SSO / SAML =====
SAML_ENABLED=false
SAML_ENTRY_POINT=https://your-idp.com/saml/sso
SAML_ISSUER=cyberforge
SAML_CERT=path/to/cert.pem

# ===== DEVELOPMENT =====
DEBUG=false
ENABLE_SWAGGER=true
ENABLE_GRAPHQL_PLAYGROUND=false
MOCK_AI_RESPONSES=false

# ===== DOCKER =====
COMPOSE_PROJECT_NAME=cyberforge
POSTGRES_USER=cyberforge
POSTGRES_PASSWORD=cyberforge_password
POSTGRES_DB=cyberforge

# Frontend (Vite)
VITE_API_PROXY_URL=http://localhost:3002/api/analyze
