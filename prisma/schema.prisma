// Prisma Schema for CyberForge
generator client {
  provider = "prisma-client-js"
}

datasource db {
  provider = "postgresql"
  url      = env("DATABASE_URL")
}

// ===== User Management =====
model User {
  id            String    @id @default(uuid())
  email         String    @unique
  username      String    @unique
  password      String    // Hashed with bcrypt
  firstName     String?
  lastName      String?
  role          Role      @default(USER)
  isActive      Boolean   @default(true)
  isVerified    Boolean   @default(false)
  verificationToken String?
  resetPasswordToken String?
  resetPasswordExpires DateTime?
  lastLoginAt   DateTime?
  createdAt     DateTime  @default(now())
  updatedAt     DateTime  @updatedAt

  // Relations
  projects      Project[]
  scans         Scan[]
  apiKeys       ApiKey[]
  auditLogs     AuditLog[]
  sessions      Session[]
  githubAccount GitHubAccount?
  gitlabAccount GitLabAccount?

  @@index([email])
  @@index([username])
  @@map("users")
}

enum Role {
  USER
  ADMIN
  ANALYST
  VIEWER
}

// ===== Authentication =====
model Session {
  id           String   @id @default(uuid())
  userId       String
  refreshToken String   @unique
  expiresAt    DateTime
  ipAddress    String?
  userAgent    String?
  createdAt    DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([refreshToken])
  @@map("sessions")
}

model ApiKey {
  id          String   @id @default(uuid())
  userId      String
  name        String
  key         String   @unique // Hashed
  lastUsedAt  DateTime?
  expiresAt   DateTime?
  isActive    Boolean  @default(true)
  permissions Json     // Array of permissions
  createdAt   DateTime @default(now())

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@index([userId])
  @@index([key])
  @@map("api_keys")
}

// ===== OAuth Accounts =====
model GitHubAccount {
  id          String   @id @default(uuid())
  userId      String   @unique
  githubId    String   @unique
  username    String
  accessToken String
  refreshToken String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("github_accounts")
}

model GitLabAccount {
  id          String   @id @default(uuid())
  userId      String   @unique
  gitlabId    String   @unique
  username    String
  accessToken String
  refreshToken String?
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user User @relation(fields: [userId], references: [id], onDelete: Cascade)

  @@map("gitlab_accounts")
}

// ===== Project Management =====
model Project {
  id          String   @id @default(uuid())
  userId      String
  name        String
  description String?
  repoUrl     String?
  language    String?
  framework   String?
  isPublic    Boolean  @default(false)
  createdAt   DateTime @default(now())
  updatedAt   DateTime @updatedAt

  user  User   @relation(fields: [userId], references: [id], onDelete: Cascade)
  scans Scan[]

  @@index([userId])
  @@map("projects")
}

// ===== Security Scanning =====
model Scan {
  id                String      @id @default(uuid())
  projectId         String
  userId            String
  status            ScanStatus  @default(QUEUED)
  scanType          ScanType    @default(FULL)
  aiProvider        String      @default("mistral")
  startedAt         DateTime?
  completedAt       DateTime?
  duration          Int?        // Seconds
  filesScanned      Int         @default(0)
  linesOfCode       Int         @default(0)
  
  // Statistics
  criticalCount     Int         @default(0)
  highCount         Int         @default(0)
  mediumCount       Int         @default(0)
  lowCount          Int         @default(0)
  infoCount         Int         @default(0)
  
  // Metadata
  metadata          Json?       // Additional scan configuration
  errorMessage      String?
  createdAt         DateTime    @default(now())
  updatedAt         DateTime    @updatedAt

  project         Project         @relation(fields: [projectId], references: [id], onDelete: Cascade)
  user            User            @relation(fields: [userId], references: [id], onDelete: Cascade)
  vulnerabilities Vulnerability[]
  codeFiles       CodeFile[]
  scanMetrics     ScanMetrics?

  @@index([projectId])
  @@index([userId])
  @@index([status])
  @@index([createdAt])
  @@map("scans")
}

enum ScanStatus {
  QUEUED
  RUNNING
  COMPLETED
  FAILED
  CANCELLED
}

enum ScanType {
  FULL
  QUICK
  INCREMENTAL
  TARGETED
}

model ScanMetrics {
  id                    String   @id @default(uuid())
  scanId                String   @unique
  
  // Performance Metrics
  analysisTime          Int      // Milliseconds
  aiCallsCount          Int      @default(0)
  aiTokensUsed          Int      @default(0)
  
  // Code Metrics
  totalFunctions        Int      @default(0)
  totalClasses          Int      @default(0)
  totalFiles            Int      @default(0)
  cyclomaticComplexity  Float?
  
  // Coverage Metrics
  codeCoverage          Float?   // Percentage
  testCoverage          Float?   // Percentage
  
  createdAt             DateTime @default(now())

  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@map("scan_metrics")
}

// ===== Vulnerabilities =====
model Vulnerability {
  id              String           @id @default(uuid())
  scanId          String
  
  title           String
  description     String
  severity        Severity
  category        VulnCategory
  cweId           String?          // e.g., "CWE-89"
  cveId           String?          // e.g., "CVE-2023-1234"
  owaspCategory   String?          // e.g., "A03:2021"
  
  // Location
  filePath        String
  lineNumber      Int?
  columnNumber    Int?
  functionName    String?
  className       String?
  
  // Details
  vulnerableCode  String?
  recommendation  String
  references      Json?            // Array of URLs
  
  // Status
  status          VulnStatus       @default(OPEN)
  falsePositive   Boolean          @default(false)
  assignedTo      String?
  notes           String?
  
  createdAt       DateTime         @default(now())
  updatedAt       DateTime         @updatedAt

  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([severity])
  @@index([status])
  @@index([category])
  @@map("vulnerabilities")
}

enum Severity {
  CRITICAL
  HIGH
  MEDIUM
  LOW
  INFO
}

enum VulnCategory {
  SQL_INJECTION
  XSS
  COMMAND_INJECTION
  PATH_TRAVERSAL
  INSECURE_DESERIALIZATION
  HARDCODED_CREDENTIALS
  INSECURE_CRYPTO
  AUTHENTICATION_BYPASS
  AUTHORIZATION_FLAW
  INFORMATION_DISCLOSURE
  SSRF
  XXE
  CSRF
  RACE_CONDITION
  BUFFER_OVERFLOW
  MEMORY_LEAK
  INSECURE_CONFIGURATION
  DEPENDENCY_VULNERABILITY
  API_SECURITY
  OTHER
}

enum VulnStatus {
  OPEN
  IN_PROGRESS
  RESOLVED
  WONT_FIX
  FALSE_POSITIVE
}

// ===== Code Files =====
model CodeFile {
  id           String   @id @default(uuid())
  scanId       String
  
  filePath     String
  language     String
  linesOfCode  Int      @default(0)
  complexity   Int?     // Cyclomatic complexity
  
  // Analysis results
  issuesCount  Int      @default(0)
  riskScore    Float    @default(0)
  
  content      String?  // Optional: store file content
  metadata     Json?
  
  createdAt    DateTime @default(now())

  scan Scan @relation(fields: [scanId], references: [id], onDelete: Cascade)

  @@index([scanId])
  @@index([language])
  @@map("code_files")
}

// ===== Audit Logs =====
model AuditLog {
  id          String      @id @default(uuid())
  userId      String?
  action      AuditAction
  resource    String      // e.g., "user", "scan", "project"
  resourceId  String?
  details     Json?
  ipAddress   String?
  userAgent   String?
  createdAt   DateTime    @default(now())

  user User? @relation(fields: [userId], references: [id], onDelete: SetNull)

  @@index([userId])
  @@index([action])
  @@index([createdAt])
  @@map("audit_logs")
}

enum AuditAction {
  USER_LOGIN
  USER_LOGOUT
  USER_REGISTER
  USER_DELETE
  PROJECT_CREATE
  PROJECT_UPDATE
  PROJECT_DELETE
  SCAN_START
  SCAN_COMPLETE
  SCAN_CANCEL
  VULN_CREATE
  VULN_UPDATE
  VULN_RESOLVE
  API_KEY_CREATE
  API_KEY_DELETE
  SETTINGS_UPDATE
}

// ===== Notifications =====
model Notification {
  id          String   @id @default(uuid())
  userId      String
  type        NotificationType
  title       String
  message     String
  link        String?
  isRead      Boolean  @default(false)
  metadata    Json?
  createdAt   DateTime @default(now())

  @@index([userId])
  @@index([isRead])
  @@index([createdAt])
  @@map("notifications")
}

enum NotificationType {
  SCAN_COMPLETE
  SCAN_FAILED
  CRITICAL_VULN_FOUND
  SECURITY_ALERT
  SYSTEM_UPDATE
  INTEGRATION_ERROR
}

// ===== Webhooks =====
model Webhook {
  id          String        @id @default(uuid())
  userId      String
  name        String
  url         String
  events      Json          // Array of event types
  secret      String?       // For signature verification
  isActive    Boolean       @default(true)
  lastTriggeredAt DateTime?
  failureCount    Int       @default(0)
  createdAt   DateTime      @default(now())
  updatedAt   DateTime      @updatedAt

  @@index([userId])
  @@map("webhooks")
}
